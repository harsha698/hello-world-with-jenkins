pipeline {
	
	agent any
	tools {
		jdk 'oracle-9.0.4'
		maven 'maven'
	}
	stages {
		stage('Git Checkout') {
			steps {
				git credentialsId: 'github', url: 'https://github.com/harsha698/hello-world-with-jenkins'
			}
		}
		stage('Build') {
			steps {
				echo 'Building the application'
				sh 'mvn clean install'
			}
		}
		stage('Validate') {
			steps {
				sh 'mvn exec:java'
			}
		}
	}
}
